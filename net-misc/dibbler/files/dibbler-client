depend() {
	need net
}

DIBBLER_BINARY=/usr/sbin/dibbler-client
DIBBLER_PIDFILE=/var/lib/dibbler/client.pid

start() {
	ebegin "Starting DHCPv6 client: dibbler-client"
	start-stop-daemon --start --exec ${DIBBLER_BINARY} \
		--pidfile ${DIBBLER_PIDFILE} \
		-- start
	eend $?
}

stop() {
	ebegin "Stopping DHCPv6 client: dibbler-client"
	start-stop-daemon --stop --exec ${DIBBLER_BINARY} \
		--pidfile ${DIBBLER_PIDFILE} \
		-- stop
	eend $?
}
