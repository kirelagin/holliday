depend() {
	need net
}

start() {
	ebegin "Starting DHCPv6 client: dibbler-client"
	start-stop-daemon --start --exec /usr/sbin/dibbler-client \
		--pidfile /var/lib/dibbler/client.pid \
		-- start
	eend $?
}

stop() {
	ebegin "Stopping DHCPv6 client: dibbler-client"
	start-stop-daemon --stop --exec /usr/sbin/dibbler-client \
		--pidfile /var/lib/dibbler/client.pid \
		-- stop
	eend $?
}
