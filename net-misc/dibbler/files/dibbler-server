depend() {
	need net
}

start() {
	ebegin "Starting DHCPv6 server: dibbler-server"
	start-stop-daemon --start --exec /usr/sbin/dibbler-server \
		--pidfile /var/lib/dibbler/server.pid \
		-- start
	eend $?
}

stop() {
	ebegin "Stopping DHCPv6 server: dibbler-server"
	start-stop-daemon --stop --exec /usr/sbin/dibbler-server \
		--pidfile /var/lib/dibbler/server.pid \
		-- stop
	eend $?
}
